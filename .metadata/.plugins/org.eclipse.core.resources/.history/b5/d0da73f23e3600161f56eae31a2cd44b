package br.com.biavan.calcterminal;

public abstract class AbstractCalc implements Calculable {
	
	private Double value;
	
	public Double getValue() {
		return value;
	}

	public void setValue(Double value) {
		this.value = value;
	}

	@Override
	public Double add(Double val) {
		return value + val;
	}

	@Override
	public Double subtract(Double val) {
		return value - val;
	}

	@Override
	public Double multiplies(Double val) {
		return value * val;
	}

	@Override
	public Double[] divides(Double val) {
		Double[] result = {value / val, value % val};
		return result;
	}

}
